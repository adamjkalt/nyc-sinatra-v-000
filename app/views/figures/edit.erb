<form action="/figures/<%=@figure.id%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">

  <label> Name </label>
<input type="text" id="figure_name" value="<%= @figure.name %>" name="figure[name]">
<br/>
  <label> Titles </label>
<br/>
  <% Title.all.each do |title| %>
  <label><%= title.name %></label>
  <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>" "checked">
    <% end %>
<br/>
  <label>Create New Title:</label>
    <input type="text" id="new_title" name="title[name]">
<br/>
  <label>Landmarks</label>
  <br/>

      <% Landmark.all.each do |landmark| %>
        <label><%= landmark.name %></label>
        <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>>
        <br>
        <% end %>

        <label>Create New Landmark:</label>
         <label>Name:</label>
          <input type="text" id="new_landmark" name="landmark[name]">
          <label>Year:</label>
          <input type="text" name="landmark[year_completed]">
          <input type="submit" value="Create New Figure">
        </form>
